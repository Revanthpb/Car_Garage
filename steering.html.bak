    .video-container iframe {
      max-width: 100%;
      height: 400px;
      border-radius: 10px;
      border: 5px solid #3498db;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .images img {
        max-width: 100%;
        margin-bottom: 15px;
