      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
      margin-bottom: 15px;
    }

    .images img:hover {
      transform: scale(1.05);
    }

    /* Video Section */
    .video-container {
      text-align: center;
      margin-top: 30px;
      padding: 20px;
      background: #f9f9f9;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .video-container iframe {
      max-width: 100%;
      height: 400px;
      border-radius: 10px;
      border: 5px solid #3498db;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .images img {
        max-width: 100%;
        margin-bottom: 15px;
      }

      .video-container iframe {
        height: 250px;
      }

      h1 {
        font-size: 2rem;
      }

      h2 {
        font-size: 1.5rem;
      }
